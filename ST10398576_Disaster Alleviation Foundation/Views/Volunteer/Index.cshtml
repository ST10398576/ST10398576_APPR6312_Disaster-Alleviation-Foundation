@model IEnumerable<ST10398576_Disaster_Alleviation_Foundation.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteers";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Volunteers</h2>
    <a asp-action="Register" class="btn btn-primary">Register Volunteer</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Skills</th>
            <th>Availability</th>
            <th>User</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User?.FullName</td>
                <td>@item.Skills</td>
                <td>@item.Availability</td>
                <td>@item.User?.UserName (@item.User?.Email)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.VolunteerID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.VolunteerID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
