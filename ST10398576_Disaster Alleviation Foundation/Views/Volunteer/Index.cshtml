@model IEnumerable<ST10398576_Disaster_Alleviation_Foundation.Models.Volunteer>
@{
    ViewData["Title"] = "Volunteers";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Volunteers</h2>
    <a class="btn btn-primary" asp-action="Register">Register as Volunteer</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Contact</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.VolunteerID</td>
                <td>@v.User?.FullName</td>
                <td>@v.User?.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@v.VolunteerID" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@v.VolunteerID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@v.VolunteerID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>