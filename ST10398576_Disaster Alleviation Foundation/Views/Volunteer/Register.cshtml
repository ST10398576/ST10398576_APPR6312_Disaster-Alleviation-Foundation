@model Volunteer

<h2>Volunteer Registration</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Skills"></label>
        <input asp-for="Skills" class="form-control" placeholder="Medical, Logistics, etc." />
    </div>

    <div class="form-group">
        <label asp-for="Availability"></label>
        <input asp-for="Availability" class="form-control" placeholder="Weekends, Evenings, etc." />
    </div>

    <button type="submit" class="btn btn-success">Register</button>
</form>
