@model ST10398576_Disaster_Alleviation_Foundation.Models.Volunteer

<h2>Delete Volunteer</h2>

<p>Are you sure you want to delete this volunteer?</p>

<div>
    <strong>@Model.User?.UserName</strong> - @Model.User?.Email
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="VolunteerID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
