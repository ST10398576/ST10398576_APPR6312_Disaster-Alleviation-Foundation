@{
    ViewData["Title"] = "Home";
}
<center-align>
    <div class="text-center my-5">
        <h1 class="display-4">Welcome to the Disaster Alleviation Foundation</h1>
        <p class="lead">Helping communities rebuild through donations, projects, and volunteers.</p>
    </div>

    <div class="row text-center mt-4">
        <div class="col-md-3 mb-3">
            <a class="btn btn-primary w-100 py-3" asp-controller="ResourceDonation" asp-action="Index">💰 Donations</a>
        </div>
    </div>

    <div class="row text-center mt-4">
        <div class="col-md-3 mb-3">
            <a class="btn btn-danger w-100 py-3" asp-controller="DisasterIncident" asp-action="Index">⚠️ Incidents</a>
        </div>
    </div>

    <div class="row text-center mt-4">
        <div class="col-md-3 mb-3">
            <a class="btn btn-success w-100 py-3" asp-controller="Project" asp-action="Index">📂 Projects</a>
        </div>
    </div>

    <div class="row text-center mt-4">
        <div class="col-md-3 mb-3">
            <a class="btn btn-info w-100 py-3" asp-controller="Volunteer" asp-action="Index">🙋 Volunteers</a>
        </div>
    </div>
</center-align>