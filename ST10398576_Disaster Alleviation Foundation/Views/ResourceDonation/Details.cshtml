@model ST10398576_Disaster_Alleviation_Foundation.Models.ResourceDonation

<h2>Donation Details</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Type:</strong> @Model.ResourceDonationType</p>
        <p><strong>Description:</strong> @Model.ResourceItemDescription</p>
        <p><strong>Quantity:</strong> @Model.ResourceDonationQuantity</p>
        <p><strong>Amount:</strong> @Model.ResourceDonationAmount</p>
        <p><strong>Donor:</strong> @Model.Donor?.UserName (@Model.Donor?.Email)</p>
        <p><strong>Date:</strong> @Model.ResourceDonationDate.ToShortDateString()</p>
        <p><strong>Payment Ref:</strong> @Model.ResourceDonationPaymentReference</p>
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ResourceDonationID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
