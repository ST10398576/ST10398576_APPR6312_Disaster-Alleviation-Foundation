@model ST10398576_Disaster_Alleviation_Foundation.Models.ResourceDonation

<h2>Edit Donation</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ResourceDonationID" />
    <div class="form-group">
        <label asp-for="ResourceDonationType"></label>
        <input asp-for="ResourceDonationType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ResourceDonationAmount"></label>
        <input asp-for="ResourceDonationAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ResourceItemDescription"></label>
        <input asp-for="ResourceItemDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ResourceDonationQuantity"></label>
        <input asp-for="ResourceDonationQuantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
