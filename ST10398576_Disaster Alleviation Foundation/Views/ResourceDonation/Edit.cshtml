@model ST10398576_Disaster_Alleviation_Foundation.Models.ResourceDonation
@{
    ViewData["Title"] = "Edit Donation";
}
<h2>Edit Donation</h2>
<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="ResourceDonationID" />
    <div class="mb-3">
        <label asp-for="ResourceDonationType" class="form-label"></label>
        <input asp-for="ResourceDonationType" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ResourceDonationAmount" class="form-label"></label>
        <input asp-for="ResourceDonationAmount" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ResourceDonationQuantity" class="form-label"></label>
        <input asp-for="ResourceDonationQuantity" class="form-control" />
    </div>
    <button class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
