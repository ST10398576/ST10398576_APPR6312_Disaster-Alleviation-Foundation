@model IEnumerable<ST10398576_Disaster_Alleviation_Foundation.Models.ResourceDonation>
@{
    ViewData["Title"] = "Donations";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Resource Donations</h2>
    <a class="btn btn-primary" asp-action="Create">Add Donation</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ResourceDonationID</td>
                <td>@item.ResourceDonationType</td>
                <td>@item.ResourceDonationAmount</td>
                <td>@item.ResourceItemDescription</td>
                <td>@item.ResourceDonationDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ResourceDonationID" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ResourceDonationID" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ResourceDonationID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

