@model IEnumerable<ST10398576_Disaster_Alleviation_Foundation.Models.ResourceDonation>
@{
    ViewData["Title"] = "Donations";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Resource Donations</h2>
    <a class="btn btn-primary" asp-action="Create">Add Donation</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Donor</th>
            <th>Type</th>
            <th>Amount / Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.ResourceDonationDate.ToString("yyyy-MM-dd")</td>
                <td>@(d.Donor?.UserName ?? "Unknown")</td>
                <td>@d.ResourceDonationType</td>
                <td>
                    @if (d.ResourceDonationAmount > 0)
                    {
                        @($"R {d.ResourceDonationAmount:F2}")
                    }
                    else if (d.ResourceDonationQuantity.HasValue)
                    {

                        @($"{d.ResourceDonationQuantity.Value} items")
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@d.ResourceDonationID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
