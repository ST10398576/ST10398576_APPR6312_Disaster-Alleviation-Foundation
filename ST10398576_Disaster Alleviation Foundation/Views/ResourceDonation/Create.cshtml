@model ST10398576_Disaster_Alleviation_Foundation.Models.ResourceDonation

<h2>New Donation</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ResourceDonationType">Donation Type</label>
        <input asp-for="ResourceDonationType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ResourceDonationAmount">Donation Amount</label>
        <input asp-for="ResourceDonationAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ResourceItemDescription">Item Description</label>
        <input asp-for="ResourceItemDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ResourceDonationQuantity">Donation Quantity</label>
        <input asp-for="ResourceDonationQuantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
