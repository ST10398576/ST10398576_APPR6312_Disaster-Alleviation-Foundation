@model ST10398576_Disaster_Alleviation_Foundation.Models.ResourceDonation
@{
    ViewData["Title"] = "Add Donation";
}

<h2>Add Donation</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Donation Type</label>
        <input asp-for="ResourceDonationType" class="form-control" />
        <span asp-validation-for="ResourceDonationType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Amount (if cash)</label>
        <input asp-for="ResourceDonationAmount" class="form-control" />
        <span asp-validation-for="ResourceDonationAmount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Quantity (if goods)</label>
        <input asp-for="ResourceDonationQuantity" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Item description</label>
        <textarea asp-for="ResourceItemDescription" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Payment Reference (optional)</label>
        <input asp-for="ResourceDonationPaymentReference" class="form-control" />
    </div>

    <button class="btn btn-primary">Submit Donation</button>
    <a class="btn btn-secondary ms-2" asp-action="Index">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
