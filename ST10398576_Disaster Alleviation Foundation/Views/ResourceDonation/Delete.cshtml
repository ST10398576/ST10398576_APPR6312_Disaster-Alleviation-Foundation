@model ST10398576_Disaster_Alleviation_Foundation.Models.ResourceDonation

<h2>Delete Donation</h2>

<p>Are you sure you want to delete this donation?</p>

<div>
    <strong>@Model.ResourceDonationType</strong> - @Model.ResourceDonationAmount
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ResourceDonationID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
