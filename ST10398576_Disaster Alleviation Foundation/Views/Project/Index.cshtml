@model IEnumerable<ST10398576_Disaster_Alleviation_Foundation.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Projects</h2>
    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Status</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProjectName</td>
                <td>@item.ProjectDescription</td>
                <td>@item.ProjectLocation</td>
                <td>@item.ProjectStatus</td>
                <td>@item.StartDate?.ToShortDateString()</td>
                <td>@item.EndDate?.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProjectID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ProjectID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
