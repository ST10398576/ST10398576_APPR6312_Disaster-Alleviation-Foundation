@model IEnumerable<ST10398576_Disaster_Alleviation_Foundation.Models.Project>
@{
    ViewData["Title"] = "Projects";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Projects</h2>
    <a class="btn btn-primary" asp-action="Create">Create Project</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Project Name</th>
            <th>Start Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProjectID</td>
                <td>@p.ProjectName</td>
                <td>@(p.StartDate?.ToString("yyyy-MM-dd") ?? "-") - @(p.EndDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>@p.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.ProjectID" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@p.ProjectID" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@p.ProjectID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>