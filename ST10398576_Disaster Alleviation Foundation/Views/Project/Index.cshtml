@model IEnumerable<ST10398576_Disaster_Alleviation_Foundation.Models.Project>
@{
    ViewData["Title"] = "Projects";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Projects</h2>
    <a class="btn btn-primary" asp-action="Create">Create Project</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Status</th>
            <th>Dates</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProjectName</td>
                <td>@p.Location</td>
                <td>@p.Status</td>
                <td>
                    @(p.StartDate?.ToString("yyyy-MM-dd") ?? "-") - @(p.EndDate?.ToString("yyyy-MM-dd") ?? "-")
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@p.ProjectID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
