@model ST10398576_Disaster_Alleviation_Foundation.Models.Dispatch

@{
    ViewData["Title"] = "Edit Dispatch";
}

<h2>Edit Dispatch</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="DispatchID" />

    <div class="form-group">
        <label asp-for="ResourceDonationID" class="control-label">Resource</label>
        <select asp-for="ResourceDonationID" class="form-control" asp-items="ViewBag.Resources"></select>
    </div>

    <div class="form-group">
        <label asp-for="DisasterIncidentID" class="control-label">Disaster</label>
        <select asp-for="DisasterIncidentID" class="form-control" asp-items="ViewBag.Disasters"></select>
    </div>

    <div class="form-group">
        <label asp-for="QuantityDispatched" class="control-label"></label>
        <input asp-for="QuantityDispatched" class="form-control" />
        <span asp-validation-for="QuantityDispatched" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DispatchDate" class="control-label"></label>
        <input asp-for="DispatchDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
