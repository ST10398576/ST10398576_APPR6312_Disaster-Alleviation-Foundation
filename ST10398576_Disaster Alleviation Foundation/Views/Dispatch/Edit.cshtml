@model ST10398576_Disaster_Alleviation_Foundation.Models.Dispatch

@{
    ViewData["Title"] = "Edit Dispatch";
}

<h2>Edit Dispatch</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="DispatchID" />

    <div class="form-group">
        <label asp-for="DispatchDate" class="control-label"></label>
        <input asp-for="DispatchDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="QuantityDispatched" class="control-label"></label>
        <input asp-for="QuantityDispatched" class="form-control" />
    </div>

    <div class="form-group">
        <label>Donation</label>
        <select asp-for="ResourceDonationID" class="form-control"
                asp-items="@(new SelectList(ViewBag.Donations, "ResourceDonationID", "Description", Model.ResourceDonationID))">
        </select>
    </div>

    <div class="form-group">
        <label>Project</label>
        <select asp-for="ProjectID" class="form-control"
                asp-items="@(new SelectList(ViewBag.Projects, "ProjectID", "Name", Model.ProjectID))">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
