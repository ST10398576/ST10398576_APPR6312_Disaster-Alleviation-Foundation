@model ST10398576_Disaster_Alleviation_Foundation.Models.Dispatch

@{
    ViewData["Title"] = "Delete Dispatch";
}

<h2>Delete Dispatch</h2>

<h3>Are you sure you want to delete this dispatch?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Resource</dt>
        <dd class="col-sm-10">@Model.ResourceDonation?.ResourceDonationType</dd>

        <dt class="col-sm-2">Disaster</dt>
        <dd class="col-sm-10">@Model.DisasterIncident?.DisasterIncidentType</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.QuantityDispatched</dd>

        <dt class="col-sm-2">Dispatch Date</dt>
        <dd class="col-sm-10">@Model.DispatchDate.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="DispatchID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
