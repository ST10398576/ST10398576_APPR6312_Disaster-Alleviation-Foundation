@model ST10398576_Disaster_Alleviation_Foundation.Models.Dispatch

@{
    ViewData["Title"] = "Delete Dispatch";
}

<h2>Delete Dispatch</h2>

<h4>Are you sure you want to delete this dispatch?</h4>

<dl class="row">
    <dt class="col-sm-3">Dispatch Date</dt>
    <dd class="col-sm-9">@Model.DispatchDate?.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-3">Quantity</dt>
    <dd class="col-sm-9">@Model.QuantityDispatched</dd>

    <dt class="col-sm-3">Donation</dt>
    <dd class="col-sm-9">@Model.ResourceDonation?.Description</dd>

    <dt class="col-sm-3">Project</dt>
    <dd class="col-sm-9">@Model.Project?.Name</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="DispatchID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
