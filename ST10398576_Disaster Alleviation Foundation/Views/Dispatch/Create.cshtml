@model ST10398576_Disaster_Alleviation_Foundation.Models.Dispatch

@{
    ViewData["Title"] = "Create Dispatch";
}

<h2>Create Dispatch</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="DispatchDate" class="control-label"></label>
        <input asp-for="DispatchDate" class="form-control" type="date" />
        <span asp-validation-for="DispatchDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantityDispatched" class="control-label"></label>
        <input asp-for="QuantityDispatched" class="form-control" />
        <span asp-validation-for="QuantityDispatched" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Donation</label>
        <select asp-for="ResourceDonationID" class="form-control"
                asp-items="@(new SelectList(ViewBag.Donations, "ResourceDonationID", "Description"))">
            <option value="">-- Select Donation --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Project</label>
        <select asp-for="ProjectID" class="form-control"
                asp-items="@(new SelectList(ViewBag.Projects, "ProjectID", "Name"))">
            <option value="">-- Select Project --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
