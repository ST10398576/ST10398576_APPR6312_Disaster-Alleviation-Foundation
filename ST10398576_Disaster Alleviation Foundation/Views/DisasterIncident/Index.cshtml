@model IEnumerable<ST10398576_Disaster_Alleviation_Foundation.Models.DisasterIncident>
@{
    ViewData["Title"] = "Incident";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Disaster Incidents</h2>
    <a class="btn btn-primary" asp-action="Create">Report New Incident</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Location</th>
            <th>Description</th>
            <th>Status</th>
            <th>Reported By</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DisasterIncidentID</td>
                <td>@item.DisasterIncidentType</td>
                <td>@item.DisasterIncidentLocation</td>
                <td>@item.DisasterIncidentDescription</td>
                <td>@item.DisasterIncidentStatus</td>
                <td>@item.Reporter?.FullName (@item.Reporter?.Email)</td>
                <td>@item.ReportDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DisasterIncidentID" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.DisasterIncidentID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
