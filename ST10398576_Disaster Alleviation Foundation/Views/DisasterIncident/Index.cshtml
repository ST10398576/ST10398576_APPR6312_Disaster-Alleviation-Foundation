@model IEnumerable<ST10398576_Disaster_Alleviation_Foundation.Models.DisasterIncident>
@{
    ViewData["Title"] = "Incidents";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Disaster Incidents</h2>
    <a class="btn btn-primary" asp-action="Report">Report Incident</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Report Date</th>
            <th>Type</th>
            <th>Location</th>
            <th>Reporter</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.ReportDate.ToString("yyyy-MM-dd")</td>
                <td>@i.DisasterIncidentType</td>
                <td>@i.DisasterIncidentLocation</td>
                <td>@i.Reporter?.UserName ?? "Unknown"</td>
                <td>@i.DisasterIncidentStatus</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@i.DisasterIncidentID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
