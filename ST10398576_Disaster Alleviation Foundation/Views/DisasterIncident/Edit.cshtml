@model ST10398576_Disaster_Alleviation_Foundation.Models.DisasterIncident
@{
    ViewData["Title"] = "Edit Incident";
}
<h2>Edit Incident</h2>
<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="DisasterIncidentID" />
    <div class="mb-3">
        <label asp-for="DisasterIncidentType" class="form-label"></label>
        <input asp-for="DisasterIncidentType" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DisasterIncidentLocation" class="form-label"></label>
        <input asp-for="DisasterIncidentLocation" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DisasterIncidentDescription" class="form-label"></label>
        <textarea asp-for="DisasterIncidentDescription" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="DisasterIncidentStatus" class="form-label"></label>
        <input asp-for="DisasterIncidentStatus" class="form-control" />
    </div>
    <button class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
