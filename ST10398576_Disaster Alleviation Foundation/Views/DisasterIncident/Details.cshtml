@model ST10398576_Disaster_Alleviation_Foundation.Models.DisasterIncident
@{
    ViewData["Title"] = "Incident Details";
}

<h2>Incident Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.DisasterIncidentType</h4>
        <p><strong>Location:</strong> @Model.DisasterIncidentLocation</p>
        <p><strong>Description:</strong> @Model.DisasterIncidentDescription</p>
        <p><strong>Status:</strong> @Model.DisasterIncidentStatus</p>
        <p><strong>Reported By:</strong> @Model.Reporter?.UserName (@Model.Reporter?.Email)</p>
        <p><strong>Date Reported:</strong> @Model.ReportDate.ToShortDateString()</p>
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.DisasterIncidentID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>