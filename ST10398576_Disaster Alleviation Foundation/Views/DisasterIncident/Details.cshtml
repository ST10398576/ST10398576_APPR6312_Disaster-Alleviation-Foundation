@model ST10398576_Disaster_Alleviation_Foundation.Models.DisasterIncident
@{
    ViewData["Title"] = "Incident Details";
}

<h2>Incident Details</h2>

<div class="card">
    <div class="card-body">
        <strong>Type:</strong> @Model.DisasterIncidentType <br />
        <strong>Location:</strong> @Model.DisasterIncidentLocation <br />
        <strong>Description:</strong> @Model.DisasterIncidentDescription <br />
        <strong>Status:</strong> @Model.DisasterIncidentStatus <br />
        <strong>Reported:</strong> @Model.ReportDate
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.DisasterIncidentID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>