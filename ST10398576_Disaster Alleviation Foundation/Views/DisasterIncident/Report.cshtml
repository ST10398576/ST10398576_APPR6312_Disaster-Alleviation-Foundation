@model DisasterIncident

<h2>Report Disaster Incident</h2>

<form asp-action="Report" method="post">
    <div class="form-group">
        <label asp-for="DisasterIncidentType"></label>
        <input asp-for="DisasterIncidentType" class="form-control" placeholder="Flood, Fire, etc." />
    </div>

    <div class="form-group">
        <label asp-for="DisasterIncidentLocation"></label>
        <input asp-for="DisasterIncidentLocation" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DisasterIncidentDescription"></label>
        <textarea asp-for="DisasterIncidentDescription" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-danger">Submit Report</button>
</form>
