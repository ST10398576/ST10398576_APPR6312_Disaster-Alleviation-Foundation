@model ST10398576_Disaster_Alleviation_Foundation.Models.DisasterIncident
@{
    ViewData["Title"] = "Report Incident";
}

<h2>Report an Incident</h2>

<form asp-action="Report" method="post">
    <div class="mb-3">
        <label class="form-label">Incident Type</label>
        <input asp-for="DisasterIncidentType" class="form-control" />
        <span asp-validation-for="DisasterIncidentType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Location</label>
        <input asp-for="DisasterIncidentLocation" class="form-control" />
        <span asp-validation-for="DisasterIncidentLocation" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="DisasterIncidentDescription" class="form-control" rows="5"></textarea>
    </div>

    <button class="btn btn-primary">Submit Report</button>
    <a class="btn btn-secondary ms-2" asp-action="Index">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
