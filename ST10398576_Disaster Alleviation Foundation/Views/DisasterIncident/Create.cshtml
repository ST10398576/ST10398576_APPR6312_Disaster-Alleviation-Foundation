@model ST10398576_Disaster_Alleviation_Foundation.Models.DisasterIncident

<h2>Report Disaster Incident</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DisasterIncidentType">Incident Type</label>
        <input asp-for="DisasterIncidentType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DisasterIncidentLocation">Incident Location</label>
        <input asp-for="DisasterIncidentLocation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DisasterIncidentDescription">Incident Description</label>
        <textarea asp-for="DisasterIncidentDescription" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
